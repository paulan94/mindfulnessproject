<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/quote_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.paul.mindfulnessprojectquotespictures.QuotesMainFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/quote_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"/>

        <Button
            android:id="@+id/generate_quote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Throw me some wisdom!"
            android:layout_gravity="center_horizontal"
            android:layout_below="@id/quote_textview"/>

    </RelativeLayout>

</FrameLayout>
